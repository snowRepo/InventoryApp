<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:InventoryApp.ViewModels"
        x:Class="InventoryApp.Views.ResetPasswordWindow"
        Width="380" Height="260"
        Title="Reset password">
  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
    <TextBlock Margin="12" FontSize="18" Text="Set a new password"/>

    <StackPanel Grid.Row="1" Margin="20" Spacing="8" x:DataType="vm:ResetPasswordViewModel">
      <TextBlock Text="New password"/>
      <TextBox Text="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PasswordChar="•"/>

      <TextBlock Text="Confirm new password" Margin="0,8,0,0"/>
      <TextBox Text="{Binding ConfirmNewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PasswordChar="•"/>

      <TextBlock Foreground="Red" TextWrapping="Wrap" Text="{Binding Error}"/>

      <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
        <Button Content="Submit" Command="{Binding SubmitCommand}"/>
        <Button Content="Cancel" Command="{Binding CancelCommand}"/>
      </StackPanel>
    </StackPanel>

    <TextBlock Grid.Row="2" Margin="12" Opacity="0.6" FontSize="12" Text="InventoryApp"/>
  </Grid>
</Window>
