<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:InventoryApp.ViewModels"
             xmlns:m="using:InventoryApp.Models"
             xmlns:conv="using:InventoryApp.Converters"
             x:Class="InventoryApp.Views.ProductsView"
             x:DataType="vm:ProductsViewModel">
    
    <UserControl.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrush"/>
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="*">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Products" FontSize="24" FontWeight="Bold"/>
            <Border Height="1" Background="#E0E0E0" Margin="0,0,0,8"/>
        </StackPanel>

    <!-- Filters -->
    <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8" RowDefinitions="Auto">
      <TextBox Width="260" Watermark="Search by name or SKU" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"/>
      <Grid Grid.Column="1"/>
      <ComboBox Grid.Column="2" SelectedIndex="{Binding SortIndex}" Width="180">
        <ComboBoxItem Content="A - Z"/>
        <ComboBoxItem Content="Z - A"/>
        <ComboBoxItem Content="Low stock"/>
      </ComboBox>
      <Button Grid.Column="3" x:Name="AddProductButton" Content="Add Product" Click="OnAddProduct"/>
    </Grid>

    <!-- Comprehensive table with SharedSizeScope -->
    <ScrollViewer Grid.Row="2" Margin="0,16,0,0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
      <Grid Grid.IsSharedSizeScope="True">
        <StackPanel>
          <!-- Header -->
          <Border Padding="12,10" Background="#F4F4F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,*,*,*,*,*">
              <TextBlock Grid.Column="0" Text="Name" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
              <TextBlock Grid.Column="1" Text="SKU" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
              <TextBlock Grid.Column="2" Text="Category" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
              <TextBlock Grid.Column="3" Text="Quantity" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
              <TextBlock Grid.Column="4" Text="Price" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
              <TextBlock Grid.Column="5" Text="Actions" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Grid>
          </Border>
          <!-- Rows -->
          <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Padding="12,10" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                  <Grid ColumnDefinitions="*,*,*,*,*,*">
                    <TextBlock Grid.Column="0" 
                               Text="{Binding Name}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Sku}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <TextBlock Grid.Column="2" 
                               Text="{Binding Category}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,8,0"/>
                    <TextBlock Grid.Column="3" 
                               Text="{Binding Quantity}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <DockPanel Grid.Column="4" LastChildFill="True" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FormattedUnitPrice}" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center"/>
                    </DockPanel>
                    <StackPanel Grid.Column="5" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Spacing="8">
                      <Button Content="Edit" 
                              MinWidth="70" 
                              Padding="12,6" 
                              Click="OnEditProduct"/>
                      <Button Content="Delete" 
                              MinWidth="70" 
                              Padding="12,6" 
                              Click="OnDeleteProduct"/>
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </StackPanel>
      </Grid>
    </ScrollViewer>

    <!-- Pager -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,8,0,0" VerticalAlignment="Center">
      <TextBlock Text="Items:" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding TotalCount}" VerticalAlignment="Center"/>
      <TextBlock Text="|" Margin="8,0,0,0" VerticalAlignment="Center"/>
      <TextBlock Text="Page" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding Page}" VerticalAlignment="Center"/>
      <TextBlock Text="of" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center"/>
      <Button Content="Prev" Command="{Binding PrevPageCommand}" Margin="8,0,0,0" Padding="12,4"/>
      <Button Content="Next" Command="{Binding NextPageCommand}" Margin="4,0,0,0" Padding="12,4"/>
    </StackPanel>
  </Grid>
</UserControl>
